{
  "deployment": {
    "name": "LexiaV3 Frontend",
    "version": "1.0.0",
    "type": "static",
    "framework": "React + Vite"
  },
  "build": {
    "sourceDir": "./frontend",
    "outputDir": "./frontend/dist",
    "deployDir": "../deploy-ready",
    "buildCommand": "npm run build",
    "cleanCommand": "npm run clean"
  },
  "server": {
    "type": "OpenLiteSpeed",
    "panel": "CyberPanel",
    "domain": "app.ialexia.fr",
    "webroot": "/home/app.ialexia.fr/public_html/",
    "user": "app.ialexia.fr",
    "group": "app.ialexia.fr"
  },
  "permissions": {
    "files": "644",
    "directories": "755"
  },
  "optimization": {
    "compression": true,
    "caching": true,
    "minification": true,
    "sourcemaps": false,
    "removeConsole": true
  },
  "assets": {
    "cacheExpiry": {
      "html": "1 hour",
      "css": "1 year",
      "js": "1 year",
      "images": "1 year",
      "fonts": "1 year"
    }
  },
  "security": {
    "hideSystemFiles": true,
    "preventDirectoryListing": true,
    "corsEnabled": false
  },
  "monitoring": {
    "errorTracking": false,
    "analytics": false,
    "performanceMonitoring": false
  },
  "backup": {
    "enabled": false,
    "retention": "7 days",
    "location": "./backups/"
  }
} 