# ===================================
# LexiaV3 - Configuration d'Environnement
# ===================================
# Copiez ce fichier vers .env et modifiez les valeurs
# cp env.example .env

# ===================================
# Configuration MongoDB
# ===================================
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=changez-ce-mot-de-passe

# ===================================
# Configuration Backend
# ===================================
NODE_ENV=production
PORT=5000
MONGODB_URI=mongodb://admin:changez-ce-mot-de-passe@mongodb:27017/LexiaV3?authSource=admin

# ===================================
# Sécurité JWT
# ===================================
JWT_SECRET=changez-cette-cle-secrete-jwt-minimum-64-caracteres
REFRESH_TOKEN_SECRET=changez-cette-cle-secrete-refresh-minimum-64-caracteres

# ===================================
# Configuration Frontend
# ===================================
VITE_API_URL=https://app.lexiav3.ai/api
CORS_ORIGIN=https://app.lexiav3.ai

# ===================================
# Configuration Email
# ===================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# ===================================
# Configuration Stripe (Paiements)
# ===================================
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# ===================================
# Upload de Fichiers
# ===================================
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760

# ===================================
# Google Cloud / Vertex AI (Optionnel)
# ===================================
# GOOGLE_PROJECT_ID=votre-projet-google-cloud
# GOOGLE_CREDENTIALS_PATH=./credentials/google-credentials.json
# VERTEX_AI_LOCATION=europe-west1

# ===================================
# Clés API Externes (Optionnel)
# ===================================
# OPENAI_API_KEY=sk-...
# ANTHROPIC_API_KEY=sk-ant-...
# GOOGLE_API_KEY=AIza...

# Configuration SMTP pour l'envoi d'emails
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@example.com
SMTP_PASS=your-password
FRONTEND_URL=http://localhost:3000 