# Stage 1: Build
FROM node:18-alpine AS builder

WORKDIR /app

# Copier les fichiers de dÃ©pendances
COPY package*.json ./

# Installer les dÃ©pendances
RUN npm ci --only=production

# Copier TOUT le code source
COPY . .

# Variables d'environnement pour le build
ARG VITE_API_URL=http://168.231.86.146:8089
ENV VITE_API_URL=$VITE_API_URL

# Build l'application
RUN echo "ğŸ”¨ Building with API URL: $VITE_API_URL" && \
    npm run build && \
    echo "ğŸ“ Build completed, checking dist folder:" && \
    ls -la dist/ && \
    echo "ğŸ“„ Index.html size:" && \
    ls -lh dist/index.html && \
    echo "âœ… Build verification complete"

# Stage 2: Production
FROM nginx:alpine

# Supprimer TOUT le contenu par dÃ©faut de nginx
RUN rm -rf /usr/share/nginx/html/* && \
    rm -rf /etc/nginx/conf.d/default.conf

# Copier notre config nginx
COPY nginx.conf /etc/nginx/conf.d/default.conf

# Copier les fichiers buildÃ©s - FORCE LA COPIE
COPY --from=builder /app/dist/* /usr/share/nginx/html/
COPY --from=builder /app/dist/assets /usr/share/nginx/html/assets

# VÃ©rification finale CRITIQUE
RUN echo "ğŸ” VERIFICATION FINALE:" && \
    echo "ğŸ“ Contenu de /usr/share/nginx/html:" && \
    ls -la /usr/share/nginx/html/ && \
    echo "ğŸ“„ Taille index.html:" && \
    ls -lh /usr/share/nginx/html/index.html && \
    echo "ğŸ“„ PremiÃ¨res lignes index.html:" && \
    head -5 /usr/share/nginx/html/index.html && \
    echo "âœ… Si vous voyez 'Welcome to nginx', le build a Ã‰CHOUÃ‰ !"

# Exposer le port 8083
EXPOSE 8083

# DÃ©marrer nginx
CMD ["nginx", "-g", "daemon off;"]
